<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">




<h2>Editing Book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
     <div>Title</div>
     <%= f.text_field :title %>
    <div>Opinion</div>
      <%= f.text_area :body %>
  <div class="actions">
    <%= f.submit "Update Book" %>
  </div>
  <% end %>
  <%= link_to 'Show', book_path(@book.id) %>|<%= link_to 'Back', books_path %>

  </div>
  </div>
  </div>


